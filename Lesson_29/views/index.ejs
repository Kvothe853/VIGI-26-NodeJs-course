  <body>
    <section class="articles-container">
      <% include partials/header %>
      <div class="articles">
        <% articles.forEach((article) => { %>
        <div class="article">
          <div class="image-container">
            <img src="<%= article.image_url %>" alt="" />
          </div>
          <div class="content-container">
            <div class="title">
              <h2><%= article.title %></h2>
            </div>
            <div class="content">
              <p><%= article.description %></p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
  </body>
